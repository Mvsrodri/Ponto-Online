<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/style.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;700&display=swap" rel="stylesheet">

    <title>Ponto Online - Contato</title>
  </head>
  <body class="background">
    {{>Header}}
    <main>
        <div class="modal">
            <form class="modal-content animate" action="/contato/enviar" method="post">
                <div class="container">
                    <h1 class="title">Contato</h1>
                    <label for="name"><b>Nome</b></label>
                    <input type="text" placeholder="Digite seu nome" id="nome" name="nome" required>

                    <label for="uname"><b>E-mail</b></label>
                    <input type="email" placeholder="Digite seu E-mail" id="email" name="email" required>

                    <label for="assunto"><b>Assunto</b></label>
                    <input type="text" placeholder="Digite o assunto" id="assunto" name="assunto" required>

                    <label for="mensagem"><b>Mensagem</b></label>
                    <textarea type="text" placeholder="Digite sua mensagem" id="mensagem" name="mensagem" rows="4" cols="50" required></textarea>

                    <button type="submit" value="Mensagem">Enviar</button>  
                </div>
            </form>
        </div>
    </main>
    {{>Footer}}
  </body>
</html>