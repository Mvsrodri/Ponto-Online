                    <input type="password" placeholder="Digite sua senha" name="psw" required>
                    
                    <button type="submit">Login</button>
                    <button type="button"  class="regbtn">Registrar</button>
                    <span class="psw">Esqueceu a <a href="#">senha?</a></span>
                </div>
            </form>
        </div>
    </main>
    {{>Footer}}
